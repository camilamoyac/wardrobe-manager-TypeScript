{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es2020",
        "rootDir": "./src",
        "outDir": "./dist",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "esModuleInterop": true,   
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "tutorial",
        "node_modules"
    ]
}